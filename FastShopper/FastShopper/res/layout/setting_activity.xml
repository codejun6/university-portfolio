<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_bg_activity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:src="@drawable/img_title_setting" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="서버 주소 설정"
        android:textSize="20sp"
        android:textColor="@android:color/black" />
    
    <LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_marginTop="5dp" >
        
	    <EditText
	        android:id="@+id/editSettingServer"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="8"
	        android:layout_marginLeft="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/edittext_line_rect_shape"
	        android:hint="IP Address"
	        android:inputType="date" />
	    
	    <Button
	        android:id="@+id/btnSettingServer"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="2"
	        android:layout_marginTop="1dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_horizontal|center_vertical"
	        android:text="저장" />
    
    </LinearLayout>

</LinearLayout>