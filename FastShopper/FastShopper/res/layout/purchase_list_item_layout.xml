<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#ffffff" >
    
    <TextView
        android:id="@+id/txtItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:singleLine="true"
        android:textSize="26sp"
        android:textColor="@android:color/black" />
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
        <TextView
	        android:id="@+id/txtItemPrice"
	        android:layout_width="wrap_content"
	        android:layout_height="20sp"
	        android:layout_centerVertical="true"
	        android:textSize="15sp"
	        android:textColor="@android:color/black" />
        
	    <TextView
	        android:id="@+id/txtItemNum"
	        android:layout_width="wrap_content"
	        android:layout_height="20sp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/txtItemPrice"
	        android:textSize="15sp"
	        android:textColor="@android:color/black" />
	    
	    <TextView
            android:id="@+id/txtItemNumPrice"
            android:layout_width="wrap_content"
	        android:layout_height="20sp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/txtItemNum"
	        android:textSize="15sp"
	        android:textColor="@android:color/black" />
	    
    </RelativeLayout>
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="40sp" >

        <ImageButton
	        android:id="@+id/btnItemNumPlus"
	        android:layout_width="30sp"
	        android:layout_height="30sp"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/btnItemNumMinus"
	        android:layout_marginRight="5sp"
	        android:background="@drawable/btn_item_num_plus" />
        
	    <ImageButton
	        android:id="@id/btnItemNumMinus"
	        android:layout_width="30sp"
	        android:layout_height="30sp"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/btnItemRemove"
	        android:layout_marginRight="5sp"
	        android:background="@drawable/btn_item_num_minus" />
	    
	    <ImageButton
	        android:id="@id/btnItemRemove"
	        android:layout_width="70sp"
	        android:layout_height="30sp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/btn_item_remove" />

    </RelativeLayout>

</LinearLayout>